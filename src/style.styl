// Responsive attributes
// ------------------------------
// hide means hide everywhere
/* Sizes:
  0    <= size < 600  Phone
  600  <= size < 960  Tablet
  960  <= size < 1200 Tablet-Landscape
  1200 <= size         PC
*/
// Layout
// ------------------------------
$baseline-grid = 8px
$layout-breakpoint-sm = 600px
$layout-breakpoint-md = 960px
$layout-breakpoint-lg = 1200px
$layout-gutter-width = $baseline-grid * 2

[data-scroll-y]
  overflow-y: auto;
  overflow-x: hidden;
  &.scroll-disabled
    overflow-y hidden

[data-scroll-x]
  overflow-x: auto;
  overflow-y: hidden;
  &.scroll-disabled
    overflow-x hidden

[data-layout]
  box-sizing border-box
  display flex
[data-layout=column]
  flex-direction column
[data-layout=row]
  flex-direction row
[data-layout-padding] > [data-flex-sm],
[data-layout-padding] > [data-flex-lt-md]
  padding ($layout-gutter-width / 4)
[data-layout-padding],
[data-layout-padding] > [data-flex],
[data-layout-padding] > [data-flex-gt-sm],
[data-layout-padding] > [data-flex-md],
[data-layout-padding] > [data-flex-lt-lg]
  padding ($layout-gutter-width / 2)
[data-layout-padding] > [data-flex-gt-md],
[data-layout-padding] > [data-flex-lg]
  padding ($layout-gutter-width / 1)
[data-layout-margin] > [data-flex-sm],
[data-layout-margin] > [data-flex-lt-md]
  margin ($layout-gutter-width / 4)
[data-layout-margin],
[data-layout-margin] > [data-flex],
[data-layout-margin] > [data-flex-gt-sm],
[data-layout-margin] > [data-flex-md],
[data-layout-margin] > [data-flex-lt-lg]
  margin ($layout-gutter-width / 2)
[data-layout-margin] > [data-flex-gt-md],
[data-layout-margin] > [data-flex-lg]
  margin ($layout-gutter-width / 1)
[data-layout-wrap]
  flex-wrap wrap
[data-layout-fill]
  margin 0
  min-height 100%
  width 100%
// what this
moz-document
  [data-layout-fill]
    margin 0
    width 100%
    min-height auto
    height inherit
flex-order-for-name($suffix = null)
  $selector = "data-flex-order"
  if $suffix != null
    $selector = "data-flex-order-" + $suffix
  [{$selector}="0"]
    order 0
  [{$selector}="1"]
    order 1
  [{$selector}="2"]
    order 2
  [{$selector}="3"]
    order 3
  [{$selector}="4"]
    order 4
  [{$selector}="5"]
    order 5
  [{$selector}="6"]
    order 6
  [{$selector}="7"]
    order 7
  [{$selector}="8"]
    order 8
  [{$selector}="9"]
    order 9
layout-for-name($name)
  [data-layout-{$name}]
    box-sizing border-box
    display flex
  [data-layout-{$name}=column]
    flex-direction column
  [data-layout-{$name}=row]
    flex-direction row
offset-for-name($name = null)
  $offsetName = "data-offset"
  if $name != null
    $offsetName = "offset-" + $name
  for $i in (1)..(19)
    [{$offsetName}={$i * 5}]
      margin-left $i * 5 + "%"
  [{$offsetName}="33"], [{$offsetName}="34"]
    margin-left 33.33%
  [{$offsetName}="66"], [{$offsetName}="67"]
    margin-left 66.66%
flex-properties-for-name($name = null)
  $flexName = "data-flex"
  if $name != null
    $flexName = "data-flex-" + $name
  [{$flexName}]
    box-sizing border-box
    flex 1
  // (0-20) * 5 = 0-100%
  for $i in (0)..(20)
    [{$flexName}={$i * 5}]
      flex 0 0 $i * 5 + "%"
    [data-layout="row"] > [{$flexName}={$i * 5}]
      max-width $i * 5 + "%"
    [data-layout="column"] > [{$flexName}={$i * 5}]
      max-height $i * 5 + "%"
  [{$flexName}="33"], [{$flexName}="34"]
    flex 0 0 33.33%
  [{$flexName}="66"], [{$flexName}="67"]
    flex 0 0 66.66%
  [data-layout="row"]
    > [{$flexName}="33"], > [{$flexName}="34"]
      max-width 33.33%
    > [{$flexName}="66"], > [{$flexName}="67"]
      max-width 66.66%
  [data-layout="column"]
    > [{$flexName}="33"], > [{$flexName}="34"]
      max-height 33.33%
    > [{$flexName}="66"], > [{$flexName}="67"]
      max-height 66.66%
// Alignment attributes for layout containers' children
// Arrange on the Main Axis
// center, start, end, space-between, space-around
// flex-start is the default for justify-content
// ------------------------------
layout-align-for-name($suffix = null)
  $name = "data-layout-align"
  if $suffix != null
    $name = "data-layout-align-" + $suffix
    // Main Axis Center
  [{$name}="center"], //stretch
  [{$name}="center center"],
  [{$name}="center start"],
  [{$name}="center end"]
    justify-content center

  // Main Axis End
  [{$name}="end"], //stretch
  [{$name}="end center"],
  [{$name}="end start"],
  [{$name}="end end"]
    justify-content flex-end

  // Main Axis Space Around
  [{$name}="space-around"], //stretch
  [{$name}="space-around center"],
  [{$name}="space-around start"],
  [{$name}="space-around end"]
    justify-content space-around

  // Main Axis Space Between
  [{$name}="space-between"], //stretch
  [{$name}="space-between center"],
  [{$name}="space-between start"],
  [{$name}="space-between end"]
    justify-content space-between


  // Arrange on the Cross Axis
  // center, start, end
  // stretch is the default for align-items
  // ------------------------------

  // Cross Axis Center
  [{$name}="center center"],
  [{$name}="start center"],
  [{$name}="end center"],
  [{$name}="space-between center"],
  [{$name}="space-around center"]
    align-items center

  // Cross Axis Start
  [{$name}="center start"],
  [{$name}="start start"],
  [{$name}="end start"],
  [{$name}="space-between start"],
  [{$name}="space-around start"]
    align-items flex-start

  // Cross Axis End
  [{$name}="center end"],
  [{$name}="start end"],
  [{$name}="end end"],
  [{$name}="space-between end"],
  [{$name}="space-around end"]
    align-items flex-end




// Flex attributes for layout children
// ------------------------------
flex-properties-for-name()
layout-align-for-name()
flex-order-for-name()
offset-for-name()
/**
 * `hide-gt-sm show-gt-lg` should hide from 600px to 1200px
 * `show-md hide-gt-sm` should show from 0px to 960px and hide at >960px
 * `hide-gt-md show-gt-sm` should show everywhere (show overrides hide)`
 */
// SMALL SCREEN
@media (max-width: ($layout-breakpoint-sm - 1))
  [data-hide-sm], [data-hide]
    &:not([data-show-sm]):not([data-show])
      display none
  flex-order-for-name(sm)
  layout-align-for-name(sm)
  layout-for-name(sm)
  offset-for-name(sm)
  flex-properties-for-name(sm)
// BIGGER THAN SMALL SCREEN
@media (min-width: $layout-breakpoint-sm)
  flex-order-for-name(gt-sm)
  layout-align-for-name(gt-sm)
  layout-for-name(gt-sm)
  offset-for-name(gt-sm)
  flex-properties-for-name(gt-sm)
// MEDIUM SCREEN
@media (min-width: $layout-breakpoint-sm) and (max-width: ($layout-breakpoint-md - 1))
  [data-hide], [data-hide-gt-sm]
    &:not([data-show-gt-sm]):not([data-show-md]):not([data-show])
      display none
  [data-hide-md]:not([data-show-md]):not([data-show])
    display none
  flex-order-for-name(md)
  layout-align-for-name(md)
  layout-for-name(md)
  offset-for-name(md)
  flex-properties-for-name(md)
// BIGGER THAN MEDIUM SCREEN
@media (min-width: $layout-breakpoint-md)
  flex-order-for-name(gt-md)
  layout-align-for-name(gt-md)
  layout-for-name(gt-md)
  offset-for-name(gt-md)
  flex-properties-for-name(gt-md)
// LARGE SCREEN
@media (min-width: $layout-breakpoint-md) and (max-width: ($layout-breakpoint-lg - 1))
  [data-hide], [data-hide-gt-sm], [data-hide-gt-md]
    &:not([data-show-gt-sm]):not([data-show-gt-md]):not([data-show-lg]):not([data-show])
      display none
  [data-hide-lg]:not([data-show-lg]):not([data-show])
    display none
  flex-order-for-name(lg)
  layout-align-for-name(lg)
  layout-for-name(lg)
  offset-for-name(lg)
  flex-properties-for-name(lg)
// BIGGER THAN LARGE SCREEN
@media (min-width: $layout-breakpoint-lg)
  [data-hide-gt-sm], [data-hide-gt-md], [data-hide-gt-lg], [data-hide]
    &:not([data-show-gt-sm]):not([data-show-gt-md]):not([data-show-gt-lg]):not([data-show])
      display none
  flex-order-for-name(gt-lg)
  layout-align-for-name(gt-lg)
  layout-for-name(gt-lg)
  offset-for-name(gt-lg)
  flex-properties-for-name(gt-lg)
